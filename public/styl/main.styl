@import './colors.styl'

.masthead
  margin 30px 0
  font-family 'Open Sans',Arial,Helvetica,Sans-Serif !important

  .container
    background-color #fff
    box-shadow 0 0 10px rgba(247, 43, 43, 0.35)
    padding 20px

  img.brand
    height 125px

  .page-header
    margin 0
    border none

  hr
    margin 3px 0 20px

  h2
    font-family 'Open Sans',Arial,Helvetica,Sans-Serif
    color html5-niceblue
    margin-top 5px

  h3
    padding 0
    margin-bottom 0

  .heading
    color html5-ltorange
    font-family monospace

  .well
    background-color bg

.speaker
  padding 15px 0

  a:hover
   text-decoration underline

  border-bottom 1px solid #e7e7f7

  &:first-child
    padding-top 0

  &:last-child
    border-bottom none

.speaker-photo
  max-height 100px
  overflow hidden

  img
    width 100px

.panel-body

  h1, h2, h3, h4, h5, h6
    font-family 'Open Sans',Arial,Helvetica,Sans-Serif

#content

  .speaker
    padding 10px 0

  h4 a:hover
    text-decoration underline

#sidebar
  h5
    line-height 20px


.sponsored
  text-align center
  text-transform uppercase
  font-style italic

  img
    height 30px


#logistics
  h4
    margin-top 0

  .alert-link:hover
    text-decoration underline

  table
    margin 0 0 10px

  td:first-child
    vertical-align top
    font-weight 900
    min-width: 100px
    padding: 5px 0

  td
    p
      margin: 5px 0

      strong
        font-weight 400

#content
  font-family 'Open Sans',Arial,Helvetica,Sans-Serif !important

  table
    width 100%

    td:first-child
      font-weight 400

    td:last-child
      text-align right

.timeline-heading
  background-color #111
  color #fff

.twitter-heading
  background-color #555
  color #eee

.about-heading
  background-color #888 !important
  color #fff !important

iframe
  border 0

.tweet
  border-bottom 1px solid #eee
  padding 0 0 10px

  a:hover
    text-decoration underline

  img
    max-width: 50px
    background transparent

.profile-wrap
  background #f0f0f0

.profile
  background-color html5-niceblue
  border 1px solid html5-blue

  *
    font-family 'Open Sans',Arial,Helvetica,Sans-Serif !important

  img
    display block
    border 10px solid rgba(255, 255, 255, 0.3)
    margin 0 auto
    margin-top 10px
    margin-bottom 10px
    width 150px

  h3, h4
    text-align center
    color #fff

  a
    color #fff

.list-group-item
    background-color #fff
    border-radius 0px !important
    border 1px solid #DDD


.list-group-item.active, .list-group-itemhover
    border-left 3px solid #FF766C
    background-color #F8F7F5

img.grayscale
  filter url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale") /* Firefox 10+, Firefox on Android */
  filter gray /* IE6-9 */
  -webkit-filter grayscale(100%) /* Chrome 19+, Safari 6+, Safari 6+ iOS */

a .fa
  color #454545
